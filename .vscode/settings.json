{
	"css.validate": false,
	"files.exclude": {
		// this interfering with imports?
		// "**/node_modules/": true
	},
	"html.autoCreateQuotes": false,
	"editor.suggest.showWords": false,
	"editor.fontLigatures": true,
	"editor.fontFamily": "iosevka",
	"diffEditor.codeLens": true,
	"partialDiff.enableTelemetry": false,
	"editor.minimap.renderCharacters": false,
	"editor.autoClosingBrackets": "always",
	"editor.fontSize": 16,
	"editor.suggest.snippetsPreventQuickSuggestions": false, // forces tailwind to take a chill pill
	"editor.quickSuggestions": {
		// "other": false, // forces tailwind to take a chill pill
		"comments": false,
		"strings": false
	},
	"editor.suggest.preview": true,
	"svelte.plugin.svelte.useNewTransformation": true,
	// "svelte.plugin.svelte.enable": false,
	// "eslint.enable": false,
	"html.autoClosingTags": false,
	"explorer.experimental.fileNesting.enabled": true,
	"explorer.experimental.fileNesting.patterns": {
		"*.ts": "$(capture).test.ts",
		"package.json": "yarn.lock"
	},
	"vim.foldfix": true,
	"tailwindCSS.files.exclude": [
		"**/.git/**",
		"**/node_modules/**",
		"**/.hg/**",
		"**/*.ts",
		"**/*.json",
		"package.json"
	],
	"editor.formatOnType": true,
	"js/ts.implicitProjectConfig.strictNullChecks": true,
	"path-intellisense.ignoreTsConfigBaseUrl": true,
	// "typescript.inlayHints.parameterTypes.enabled": true,
	// "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
	// "typescript.inlayHints.variableTypes.enabled": true,
	"typescript.preferences.importModuleSpecifier": "relative"
}
