{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "(attach) site/build",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/site",
			"skipFiles": ["<node_internals>/**"],
			"args": [
				"--inspect",
				"-r",
				"source-map-support/register",
				"build/index.js"
			],
			"console": "internalConsole"
		},
		{
			"name": "debug site/build",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/site",
			"skipFiles": ["<node_internals>/**"],
			"args": [
				"--inspect",
				"-r",
				"source-map-support/register",
				"build/index.js"
			],
			"console": "internalConsole",
			"preLaunchTask": "build site"
		},
		{
			"name": "debug site/preview",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/site",
			"skipFiles": ["<node_internals>/**"],
			"args": [
				"--inspect",
				"./node_modules/vite/bin/vite",
				"preview",
				"--port",
				"3000"
			],
			"console": "internalConsole"
		},
		{
			"name": "debug site/dev (manual)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/site",
			"skipFiles": ["<node_internals>/**"],
			"args": ["./node_modules/vite/bin/vite", "dev", "--port", "3000"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Backend",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}/packages/backend",
			"skipFiles": ["<node_internals>/**"],
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["run", "start:debug"],
			"sourceMaps": true,
			"resolveSourceMapLocations": ["${workspaceFolder}/packages/backend/**"],
			"pauseForSourceMap": true,
			"sourceMapPathOverrides": {
				// we need this because we set "sourceRoot": "/" in tsconfig.json (to help sentry)
				"/*": "${workspaceFolder}/packages/backend/*"
			}
		}
	]
}
