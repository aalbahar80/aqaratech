{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "(attach) site/build",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/site",
			"skipFiles": ["<node_internals>/**"],
			"args": [
				"--inspect",
				"-r",
				"source-map-support/register",
				"build/index.js"
			],
			"console": "internalConsole"
		},
		{
			"name": "debug site/build",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/site",
			"skipFiles": ["<node_internals>/**"],
			"args": [
				"--inspect",
				"-r",
				"source-map-support/register",
				"build/index.js"
			],
			"console": "internalConsole",
			"preLaunchTask": "build site"
		},
		{
			"name": "debug site/preview",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/site",
			"skipFiles": ["<node_internals>/**"],
			"args": [
				"--inspect",
				"./node_modules/vite/bin/vite",
				"preview",
				"--port",
				"3000"
			],
			"console": "internalConsole"
		},
		{
			"name": "debug site/dev (manual)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/site",
			"skipFiles": ["<node_internals>/**"],
			"args": ["./node_modules/vite/bin/vite", "dev", "--port", "3000"]
		}
	]
}
