{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build site",
			"type": "shell",
			"command": "pnpm turbo run build --filter @self/site"
		},
		{
			"label": "lint",
			"type": "shell",
			"command": "pnpm run lint:all",
			"problemMatcher": {
				"base": "$eslint-stylish",
				"fileLocation": "absolute",
				"pattern": [
					// Reference: https://github.com/microsoft/vscode/blob/aea0fb3f03c50844de16ded70b1b45946a5ca914/src/vs/workbench/contrib/tasks/common/problemMatcher.ts#L1297
					{
						"regexp": "^.*lint: ((?:[a-zA-Z]:)*[./]+.*?)$",
						"file": 1
					},
					{
						"regexp": "^.*lint: \\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.+?)(?:\\s\\s+(.*))?$",
						"line": 1,
						"column": 2,
						"severity": 3,
						"message": 4,
						"code": 5,
						"loop": true
					}
				]
			}
		}
	]
}
