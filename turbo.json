{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build", "check"],
			"outputs": [".svelte-kit/**", "dist/**", "build/**"],
			"outputMode": "errors-only"
		},

		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build"]
		},

		"preview": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["build"]
		},

		"format": {
			"outputMode": "errors-only"
		},

		"lint": {
			"outputMode": "errors-only"
		},

		"check": {
			"outputMode": "errors-only"
		},

		"test": {
			"dependsOn": ["^build"],
			"outputs": [
				"playwright-report/**",
				"test-results/**",
				"storage-state/**",
				"downloads/**"
			]
		},

		// ### Root tasks ###
		// NOTE: Unexpected behavior: Using "*" or "/*" in <root-task>.inputs will include files in packages
		// Instead, specify filenames explicitly. Folders are fine.

		"//#format": {
			"inputs": [
				".do/**",
				".github/**",
				".changeset/**",
				".vscode/**",
				"scripts/**",
				"types/**",
				".eslintrc.js",
				".npmrc",
				".prettierrc",
				"Caddyfile",
				"docker-compose.yml",
				"pnpm-workspace.yaml",
				"readme.md",
				"tsconfig.json"
			],
			"outputMode": "errors-only"
		},

		"//#lint": {
			"inputs": [
				".do/**",
				".github/**",
				".vscode/**",
				"scripts/**",
				"types/**",
				".eslintrc.js",
				".npmrc",
				".prettierrc",
				"Caddyfile",
				"docker-compose.yml",
				"pnpm-workspace.yaml",
				"readme.md",
				"tsconfig.json"
			],
			"outputMode": "errors-only"
		},

		"//#check": {
			"inputs": [".do/**", "scripts/**", "types/**", "tsconfig.json"],
			"outputMode": "errors-only"
		},

		"//#api:generate": {
			"outputs": [
				"packages/site/src/api/openapi/**",
				"packages/test/types/api/**"
			],
			"inputs": ["packages/backend/openapi.yaml"]
		}
	}
}
