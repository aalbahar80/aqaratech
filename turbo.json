{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".svelte-kit/**",
        "dist/**",
        "build/**"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".svelte-kit/**",
        "dist/**",
        "build/**",
        "openapi.yaml"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "playwright-report",
        "test-results"
      ],
      "cache": false
    },
    "preview": {
      "dependsOn": [
        "build"
      ]
    },
    "sentry:release": {
      "dependsOn": [
        "build"
      ],
      "outputs": []
    },
    "sentry:sourcemaps": {
      "dependsOn": [
        "sentry:release"
      ],
      "outputs": []
    },
    "@self/sdk#build": {
      "dependsOn": [
        "@self/backend#build"
      ],
      "inputs": [
        "openapi.yaml",
        "openapitools.json"
      ],
      "outputs": [
        "src/**",
        "dist/**"
      ]
    },
    "health-check": {
      "cache": false
    },
    "@self/site#dev": {
      "dependsOn": [
        "@self/backend#health-check"
      ],
      "outputs": [
        ".svelte-kit/**"
      ]
    },
    "@self/site#preview": {
      "dependsOn": [
        "@self/backend#health-check"
      ]
    }
  },
  "globalDependencies": [
    "**/.env",
    "**/.env.*",
    ".env"
  ]
}