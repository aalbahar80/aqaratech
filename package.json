{
	"name": "aqtech",
	"version": "1.0.0",
	"scripts": {
		"build": "turbo run build --filter !@self/test --no-daemon",
		"preview": "turbo run preview --filter !@self/test --no-daemon",
		"dev": "turbo run dev --filter !@self/test --no-daemon",
		"test": "turbo run test",
		"sentry:release": "turbo run sentry:release",
		"format": "task format",
		"format:all": "turbo run format --continue --no-daemon",
		"format:fix": "ACTION=write pnpm format:all --force",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives --ignore-path .gitignore \"**/*.{js,cjs,mjs,ts,cts,mts,svelte}\"",
		"lint:all": "TIMING=1 turbo run lint --continue --no-daemon",
		"lint:fix": "pnpm run -r --no-bail --parallel --aggregate-output lint:fix",
		"check": "tsc --noEmit --project tsconfig.lint.json; pnpm run check:circular",
		"check:circular": "madge --circular --extensions ts --exclude '.svelte-kit|tippy' --no-spinner .",
		"check:all": "turbo run check --continue --no-daemon",
		"ci:version": "changeset version && pnpm install --lockfile-only",
		"ci:publish": "changeset tag",
		"api:generate": "pnpm run -F @self/backend api:generate && pnpm run -F @self/test api:generate && ./scripts/add-nocheck.sh && prettier --write './packages/site/src/api/openapi/**/*.ts' './packages/test/types/**/*.ts'",
		"api:generate:all": "turbo run api:generate --no-cache --no-daemon",
		"seed": "pnpm -F @self/backend exec prisma migrate reset --force",
		"precompute": "rm packages/site/.eslintcache; pnpm -F @self/backend api:document && TIMING=1 turbo run format check lint build test --continue --no-daemon"
	},
	"devDependencies": {
		"@changesets/changelog-git": "0.1.14",
		"@changesets/cli": "2.26.1",
		"@go-task/cli": "3.24.0",
		"@types/node": "18.16.3",
		"eslint": "8.40.0",
		"eslint-config-custom": "workspace:*",
		"madge": "6.0.0",
		"prettier": "2.8.8",
		"prettier-plugin-svelte": "2.10.0",
		"prettier-plugin-tailwindcss": "0.2.8",
		"tree-kill": "1.2.2",
		"ts-morph": "18.0.0",
		"tsconfig": "workspace:*",
		"tsx": "3.12.7",
		"turbo": "1.9.3",
		"typescript": "5.0.4",
		"zx": "7.2.2"
	},
	"pnpm": {
		"patchedDependencies": {
			"@rgossiaux/svelte-headlessui@1.0.2": "patches/@rgossiaux__svelte-headlessui@1.0.2.patch",
			"svelte-headlessui-combobox-temporary@0.0.7": "patches/svelte-headlessui-combobox-temporary@0.0.7.patch"
		},
		"allowNonAppliedPatches": true,
		"overrides": {
			"@rgossiaux/svelte-headlessui@1.0.2": "npm:svelte-headlessui-combobox-temporary"
		}
	},
	"private": true,
	"engines": {
		"node": ">= 16"
	}
}
