{
	"name": "aqtech",
	"version": "1.0.0",
	"scripts": {
		"build": "turbo run build",
		"preview": "turbo run preview",
		"build:site": "turbo run build --filter=@self/site",
		"build:backend": "turbo run build --filter=@self/backend",
		"seed": "turbo run seed --filter=@self/seed --filter=@self/backend",
		"test": "turbo run test:e2e",
		"dev": "turbo run dev",
		"sentry:release": "turbo run sentry:release",
		"format": "prettier --check --ignore-path .gitignore . '!pnpm-lock.yaml'",
		"format:all": "turbo run format",
		"format:fix": "prettier --write --ignore-path .gitignore . '!pnpm-lock.yaml",
		"lint": "eslint --ignore-path .gitignore ./scripts/*",
		"lint:all": "TIMING=1 turbo run lint --continue",
		"lint:fix": "pnpm run -r --no-bail --parallel --aggregate-output lint:fix",
		"check": "madge --circular --extensions ts --exclude .svelte-kit --no-spinner .",
		"check:all": "turbo run check --continue",
		"e2e:prepare": "./packages/seed/create-test-db.sh && pnpm run -F @self/backend seed",
		"ci:version": "changeset version && pnpm install --lockfile-only",
		"ci:publish": "changeset tag",
		"api:generate": "pnpm run -F @self/backend api:generate && pnpm run -F @self/test api:generate",
		"api:generate:all": "turbo run api:generate"
	},
	"devDependencies": {
		"@changesets/changelog-git": "0.1.12",
		"@changesets/cli": "2.24.4",
		"@tsconfig/node18-strictest": "1.0.0",
		"@types/node": "18.7.23",
		"eslint": "8.24.0",
		"eslint-config-custom": "workspace:*",
		"madge": "5.0.1",
		"prettier": "2.7.1",
		"prettier-plugin-tailwindcss": "0.1.13",
		"turbo": "1.4.6",
		"typescript": "4.8.4",
		"zx": "7.0.8"
	}
}
