{
	"name": "aqtech",
	"version": "1.0.0",
	"scripts": {
		"build": "turbo run build",
		"preview": "turbo run preview",
		"build:site": "turbo run build --filter=@self/site",
		"build:backend": "turbo run build --filter=@self/backend",
		"seed": "turbo run seed --filter=@self/seed --filter=@self/backend",
		"test": "turbo run test:e2e",
		"dev": "turbo run dev",
		"sentry:release": "turbo run sentry:release",
		"format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,svelte}\" --ignore-path .gitignore",
		"format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,svelte}\" --ignore-path .gitignore",
		"lint": "TIMING=1 turbo run lint --continue",
		"lint:fix": "pnpm run -r --no-bail --parallel --aggregate-output lint:fix",
		"check": "turbo run check",
		"e2e:prepare": "./packages/seed/create-test-db.sh && pnpm run -F @self/backend seed",
		"ci:version": "changeset version && pnpm install --lockfile-only",
		"ci:publish": "changeset tag"
	},
	"devDependencies": {
		"@changesets/changelog-git": "0.1.12",
		"@changesets/cli": "2.24.4",
		"prettier": "2.7.1",
		"prettier-plugin-tailwindcss": "0.1.13",
		"turbo": "1.4.6",
		"zx": "7.0.8"
	}
}
