{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"checkJs": true,
		"diagnostics": true
	},
	"include": [
		"test/**/*.js",
		"test/**/*.cjs",
		"test/**/*.mjs",
		"test/**/*.ts",
		"test/**/*.cts",
		"test/**/*.mts",

		// include files in current directory
		"./*.js",
		"./*.cjs",
		"./*.mjs",
		"./*.ts",
		"./*.cts",
		"./*.mts",

		// dotfiles
		"./.*.js",
		"./.*.cjs"
	]
}
