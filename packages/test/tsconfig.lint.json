{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"checkJs": true,
		"diagnostics": true
	},
	"include": [
		"tests/**/*.js",
		"tests/**/*.cjs",
		"tests/**/*.mjs",
		"tests/**/*.ts",
		"tests/**/*.cts",
		"tests/**/*.mts",

		"types/**/*.d.ts",

		"utils/**/*.js",
		"utils/**/*.cjs",
		"utils/**/*.mjs",
		"utils/**/*.ts",
		"utils/**/*.cts",
		"utils/**/*.mts",

		// include files in current directory
		"./*.js",
		"./*.cjs",
		"./*.mjs",
		"./*.ts",
		"./*.cts",
		"./*.mts",

		// dotfiles
		"./.*.js",
		"./.*.cjs"
	]
}
