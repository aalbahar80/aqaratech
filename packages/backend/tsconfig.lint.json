{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"checkJs": true,
		"diagnostics": true
	},
	"include": [
		"src/**/*.js",
		"src/**/*.cjs",
		"src/**/*.mjs",
		"src/**/*.ts",
		"src/**/*.cts",
		"src/**/*.mts",

		// include files in current directory
		"./*.js",
		"./*.cjs",
		"./*.mjs",
		"./*.ts",
		"./*.cts",
		"./*.mts",

		// dotfiles
		"./.*.js",
		"./.*.cjs",

		// cutom
		"seed/**/*.ts"
	]
}
