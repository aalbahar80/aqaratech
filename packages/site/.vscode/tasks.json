{
	"version": "2.0.0",
	"tasks": [
		{
			// to clear errors, matcher needs to be run again.
			// https://github.com/sveltejs/language-tools/issues/1036
			// https://stackoverflow.com/questions/60999821/what-is-the-point-of-custom-problem-matchers-if-the-problems-they-generate-can-n
			"label": "svelte-check custom task",
			"type": "shell",
			"command": "./node_modules/.bin/svelte-check --use-new-transformation --tsconfig ./tsconfig.json --output human",
			"problemMatcher": {
				"owner": "svelte",
				"applyTo": "allDocuments",
				"fileLocation": ["absolute"],
				"pattern": [
					{
						"regexp": "^(.*?):(\\d+):(\\d+)$",
						"file": 1,
						"line": 2,
						"column": 3
					},
					{
						"regexp": "^(Error|Warn|Hint):(.*?)$",
						"severity": 1,
						"message": 2
					}
				]
			}
		}
	]
}
